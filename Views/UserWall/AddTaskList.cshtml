@using ArtSkills.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Add tasklist";
}

<div class="col-4 offset-4 text-center">
    <h3>Adding tasklist</h3>
    <hr />

    <form asp-action="AddTaskList" method="post">
        <fieldset>
            <legend>Name of the taskList</legend>
            <input name="name" class="form-control bg-white" required />
        </fieldset>
        <fieldset>
            <legend>Description</legend>
            <textarea name="Description" rows="5" cols="44"> </textarea>
        </fieldset>
        <hr />
        <button type="submit" class="btn btn-primary">Add taskList</button>

    </form>
</div>
