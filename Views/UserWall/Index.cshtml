@using ArtSkills.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model ApplicationUser
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout.cshtml";
}

@if (Model.Arts.Count != 0)
{
    <div class="posts" id="postsArea">
        @{await Html.RenderPartialAsync("~/Views/Art/ArtsCollection.cshtml", @Model.Arts.OrderByDescending(a => a.PublishDate).ToList());}
    </div>
}
else
{
    <div class="text-center">
        <h1>@Localizer["Message"]</h1>
    </div>
}
