@using ArtSkills.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1>@Model.artistNickname</h1>
    <p>@Model.About</p>
    @if (Model.Id != UserManager.GetUserId(User))
    {
        <button id="update-profile-button" type="submit" class="btn btn-primary">Follow user</button>
    }
</div>
<hr>

    <div class="row">
        <div class="col-md-5">
            <partial name="_UserWallNavigation" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
