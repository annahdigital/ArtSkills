@using ArtSkills.Models
@using ArtSkills.ViewModels
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model UserAndArtsViewModel
@{
    ViewData["Title"] = "About";
    Layout = "_Layout.cshtml";
}

<div class="row">
    <div class="col-4 text-center">
        <img src="~/Resources/kittypaint.png" />
    </div>
    <div class="col-4 text-center bg-extralighttt extrarounded">
        <h3>@Localizer["Basic"]</h3>
        <hr />
        <form id="profile-form" method="post" class="">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@Localizer["Name"]</label>
                <input asp-for=@Model.user.Name class="form-control bg-white" disabled />
            </div>
            <div class="form-group">
                <label>@Localizer["Surname"]</label>
                <input asp-for=@Model.user.Surname class="form-control bg-white" disabled />
            </div>
            <div class="form-group">
                <label>@Localizer["BirthDate"]</label>
                <input asp-for=@Model.user.DateOfBirth class="form-control bg-white" disabled />
            </div>
        </form>
        <hr />
        <h3>@Localizer["Statistics"]</h3>
        @{
            int progress = Model.user.TaskLists.ToList().FindAll(x => x.Status == true).Count;
        }
        <hr />
        <div class="form-group">
            <label>@Localizer["Progress"]</label>
            <div progress-value="progress" progress-max="@Model.user.TaskLists.Count"></div>
        </div>
        <p>@Localizer["TaskCount"] @Model.user.TaskLists.Count</p>
        <hr />
        <div class="form-group">
            <label>@Localizer["Registration"]</label>
            <input asp-for=@Model.user.RegistrationDate class="form-control bg-white" disabled />
        </div>
        <div class="form-group" style="padding-bottom:10px;">
            <label>@Localizer["ArtCount"]</label>
            <input asp-for=@Model.user.Arts.Count class="form-control bg-white" disabled />
        </div>
    </div>
    <div class="col-4 text-center">
        <img src="~/Resources/kittypaint.png" />
    </div>
</div>

