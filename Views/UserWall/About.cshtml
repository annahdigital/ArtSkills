@using ArtSkills.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model ApplicationUser
@{
    ViewData["Title"] = "About";
    Layout = "_Layout.cshtml";
}
  
    <div class="row">
        <div class="col-4 text-center">
            <img src="~/Resources/kittypaint.png" />
        </div>
        <div class="col-4 text-center bg-extralighttt extrarounded">
            <h3>Basic information</h3>
            <hr />
            <form id="profile-form" method="post" class="">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for=@Model.Name></label>
                    <input asp-for=@Model.Name class="form-control bg-white" disabled />
                </div>
                <div class="form-group">
                    <label asp-for=@Model.Surname></label>
                    <input asp-for=@Model.Surname class="form-control bg-white" disabled />
                </div>
                <div class="form-group">
                    <label>Date of birth</label>
                    <input asp-for=@Model.DateOfBirth class="form-control bg-white" disabled />
                </div>
            </form>
            <hr />
            <h3>Statistics</h3>
            @{
                int progress = Model.TaskLists.ToList().FindAll(x => x.Status == true).Count;
            }
            <hr />
            <div class="form-group">
                <label>Completed tasklists progress bar:</label>
                <div progress-value="progress" progress-max="@Model.TaskLists.Count"></div>
            </div>
            <p>Overall tasklists count: @Model.TaskLists.Count</p>
            <hr />
            <div class="form-group">
                <label>Registration date</label>
                <input asp-for=@Model.RegistrationDate class="form-control bg-white" disabled />
            </div>
            <div class="form-group" style="padding-bottom:10px;">
                <label>Count of arts</label>
                <input asp-for=@Model.Arts.Count class="form-control bg-white" disabled />
            </div>
        </div>
        <div class="col-4 text-center">
            <img src="~/Resources/kittypaint.png" />
        </div>
    </div>
     
