@using ArtSkills.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model ApplicationUser
@{
    ViewData["Title"] = "Add art";
    Layout = "_Layout.cshtml";
}

<div class="col-4 offset-4 text-center">
    <h3>Adding art</h3>
    <hr />

    <form asp-action="AddArt" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend>Name of the art</legend>
            <input name="name" class="form-control bg-white" required />
        </fieldset>

        <fieldset>
            <legend>Load a picture</legend>
            <input name="pictureUrl" type="file" class="form-control" required />
        </fieldset>
        <hr />
        <fieldset>
            <legend>Description</legend>
            <textarea name="Description" rows="5" cols="44"> </textarea>
        </fieldset>
        <hr />
        <button type="submit" class="btn btn-primary">Add art</button>

    </form>
</div>
