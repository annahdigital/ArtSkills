@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model StatisticsModel
@{
    ViewData["Title"] = "Statistics";
    ViewData["ActivePage"] = ManageNavPages.Statistics;
}

<h4>@Localizer["Title"]</h4>
<div class="row">
    <div class="col-md-6 text-center">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@Localizer["RegistrationDate"]</label>
                <input asp-for="Input.RegistrationDate" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.RegistrationDate" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="Input.Completed"></label>
                <input asp-for="Input.Completed" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.Completed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.InProgress"></label>
                <input asp-for="Input.InProgress" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.InProgress" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label>@Localizer["Tasklists"]</label>
                <input asp-for="Input.Tasklists" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.Tasklists" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Arts"]</label>
                <input asp-for="Input.Arts" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.Arts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Title"]</label>
                <input asp-for="Input.Statistics" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.Statistics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Followers"]</label>
                <input asp-for="Input.Followers" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.Followers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>@Localizer["Following"]</label>
                <input asp-for="Input.Following" class="form-control bg-white" disabled />
                <span asp-validation-for="Input.Following" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}